{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noEmit": false,
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "outDir": ".next/server",
    "isolatedModules": true
  },
  "include": [
    "server/**/*.ts",
    "types/**.*",
    "store/**/*",
    "pages/**/*",
    "layouts/**/*",
    "components/**/*"
  ],
  "exclude": [
    ".next"
  ]
}
